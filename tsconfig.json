{
  "compilerOptions": {
    "noEmit": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": [
      "es6"
    ],
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@src": [
        "src"
      ],
      "@test/*": [
        "test/*"
      ],
      "@test": [
        "test"
      ]
    },
    "rootDirs": [
      "src"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "test",
    "examples",
    "vitest.config.ts"
  ]
}
